{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/login.css') }}">
{% endblock %}
{% block body %}

	<div class="container-fluid">
		<div class="abs-center">

			<form id="login" method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Est&aacute;s logueado como
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Por favor, registrese</h1>
				<label for="inputUsername">Usuario</label>
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control m-auto rounded-pill" required autofocus>
				<label for="inputPassword">Contrase&ntilde;a</label>
				<input type="password" name="password" id="inputPassword" class="form-control m-auto rounded-pill" required>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
				                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				                See https://symfony.com/doc/current/security/remember_me.html
				
				                <div class="checkbox mb-3">
				                    <label>
				                        <input type="checkbox" name="_remember_me"> Remember me
				                    </label>
				                </div>
				            #}

				<button class="btn btn-lg btn-primary rounded-pill" type="submit">
					Logueate
				</button>
			</form>
		</div>
	</div>

{% endblock %}
